<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_bg"
    android:fitsSystemWindows="true"
    android:paddingBottom="3dp"
    android:paddingEnd="3dp"
    android:paddingStart="3dp"
    android:paddingTop="3dp"
    tools:context=".HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_language_items_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.rgk.android.translator.view.CircleIndicatorView
        android:id="@+id/id_home_page_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        app:enableIndicatorSwitch="true"
        app:indicatorBorderWidth="0dp"
        app:indicatorColor="#C1C1C1"
        app:indicatorRadius="3dp"
        app:indicatorSelectColor="#606060"
        app:indicatorSpace="6dp" />

    <include layout="@layout/floating_action_button" />
</FrameLayout>