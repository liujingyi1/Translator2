<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_language_item_img_length"
    android:background="@drawable/home_language_item_bg"
    >
    <ImageView
        android:id="@+id/id_home_language_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/id_home_language_item_name"
        android:maxLines="1"
        android:textColor="#666666"
        android:textSize="@dimen/main_language_item_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
